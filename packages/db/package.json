{
  "name": "@acme/db",
  "version": "0.1.0",
  "main": "./index.ts",
  "types": "./index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "with-env": "dotenv -e ../../.env --",
    "studio": "pnpm with-env prisma studio --port 3002",
    "db:push": "pnpm with-env drizzle-kit push:mysql",
    "db:generate": "pnpm with-env drizzle-kit generate:mysql",
    "db:reset": "pnpm with-env drizzle-kit drop --config=drizzle.config.ts",
    "update": "pnpm update"
  },
  "dependencies": {
    "@planetscale/database": "^1.7.0",
    "@prisma/client": "^4.14.1",
    "drizzle-orm": "^0.26.5",
    "postgres": "^3.3.5"
  },
  "devDependencies": {
    "dotenv-cli": "^6.0.0",
    "drizzle-kit": "^0.18.1",
    "prisma": "^4.14.1",
    "typescript": "^4.9.5"
  }
}